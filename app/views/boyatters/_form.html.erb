<p id="notice"><%= notice %></p>

<%= form_for(@boyatter, url: choose_new_or_edit) do |f| %>
  <% if @boyatter.errors.any? %>
    <div id="error_explanation">
      <h2><%= @boyatter.errors.count %>件のエラーがあります。</h2> 　　
      
      <ul>
      <% @boyatter.errors.full_messages.each do |msg| %>  
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :conten %>
  <%= f.text_field :conten, class: 'form-control' %>
  <br>
  <%= f.submit "投稿",class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "ぼやき一覧へ戻る", boyatters_path %>